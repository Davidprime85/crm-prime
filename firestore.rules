rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isAttendant() {
      return isAuthenticated() && getUserRole() == 'attendant';
    }
    
    function isClient() {
      return isAuthenticated() && getUserRole() == 'client';
    }
    
    // ============= PROFILES =============
    match /profiles/{userId} {
      // Usuários podem ler e atualizar seus próprios perfis
      allow read: if isOwner(userId) || isAdmin() || isAttendant();
      allow update: if isOwner(userId);
      allow create: if isOwner(userId); // Criado durante registro
      allow delete: if isAdmin();
    }
    
    // ============= PROCESSES =============
    match /processes/{processId} {
      // Admin e Attendant podem ler todos
      allow read: if isAdmin() || isAttendant();
      
      // Cliente pode ler apenas seus próprios processos
      allow read: if isClient() && resource.data.client_id == request.auth.uid;
      
      // Admin e Attendant podem criar e atualizar
      allow create, update: if isAdmin() || isAttendant();
      
      // Apenas Admin pode deletar
      allow delete: if isAdmin();
      
      // ============= MESSAGES (Subcoleção) =============
      match /messages/{messageId} {
        // Permite ler mensagens do processo se tem acesso ao processo
        allow read: if isAdmin() || 
                       isAttendant() || 
                       (isClient() && get(/databases/$(database)/documents/processes/$(processId)).data.client_id == request.auth.uid);
        
        // Permite criar mensagens se tem acesso ao processo
        allow create: if isAuthenticated() && 
                         (isAdmin() || 
                          isAttendant() || 
                          (isClient() && get(/databases/$(database)/documents/processes/$(processId)).data.client_id == request.auth.uid));
        
        // Ninguém pode atualizar ou deletar mensagens
        allow update, delete: if false;
      }
    }
    
    // ============= FALLBACK =============
    // Bloquear tudo que não está explicitamente permitido
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
